<%= form_for @recipe, html: { multipart: true } do |f| %>
  <%= render "shared/error", object: @recipe %>
  <div class="form-group">
	<%= f.label :title %><br/>
	<%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
	<%= f.label :description %><br/>
	<%= f.text_area :description, class: "form-control", rows: 5 %>
  </div>
  <div class="form-group">
	<%= f.label :image %><br/>
	<%= f.file_field :image, class: "form-control"%>
  </div>
  <div class="col-md-6">
    <h3>Ingredients</h3>
    <div class="ingredients">
	  <%= f.fields_for :ingredients do |builder| %>
		<%= render "ingredient_fields", f: builder %>
	  <% end %>
	  <%= add_field("Add", f, :ingredients) %>
	</div>
  </div>
  <div class="col-md-6">
    <h3>Directions</h3>
    <div class="directions">
	  <%= f.fields_for :directions do |builder| %>
		<%= render "direction_fields", f: builder %>
		<% end %>
	  <%= add_field("Add", f, :directions) %>
	</div>
  </div>
  <div class="action"><%= f.submit((yield :button), class: "btn btn-default") %></div>
<% end %>